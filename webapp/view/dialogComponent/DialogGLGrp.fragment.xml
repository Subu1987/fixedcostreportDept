<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <SelectDialog
        title="Select GL Group"
        items="{glGrpData>/}"
        search="_handleValueGLGrpSearch"
        confirm="_handleValueGLGrpClose"
        cancel="_handleValueGLGrpClose"
        contentWidth="auto"
        class="sapUiPopupWithPadding">
        <StandardListItem
            title="{glGrpData>Key}"
            description="{glGrpData>Value}"
            iconDensityAware="false"
            iconInset="false" />
    </SelectDialog>
</core:FragmentDefinition>